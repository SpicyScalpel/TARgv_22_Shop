@model Shop.Models.AccuWeathers.SearchCityViewModel

<div class="container">

    <form method="post">
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">

                <h2>Search the forecast in a city</h2>
                <br />
                <label asp-for="CityName" style="font-family:Arial"></label>
                <input asp-for="CityName" class="font-control" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="AccuWeather" asp-action="searchCity" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>

</div>